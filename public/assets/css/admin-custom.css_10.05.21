
/* top right drop menu start */

.main-header .dropdown-menu { background-color: #003f51; }

.main-header .dropdown-menu .dropdown-item { overflow: hidden;  border-bottom: 1px solid #18646f; padding: 5px 10px; }
.main-header .dropdown-menu .dropdown-item:last-child { border-bottom: 0px; }
.main-header .dropdown-menu .dropdown-item:hover { background-color: transparent; }
.main-header .dropdown-menu .dropdown-item span.text-muted {font-size: 18px!important; color: #fff!important;}
.main-header .dropdown-menu .dropdown-item:hover span.text-muted {color: #bab93f!important;}


/* top right drop menu end */


/* sidebar start */
.main-sidebar {background-image: linear-gradient(#003f51, #369190, #9bb55d, #52ad9e);}

.main-sidebar .brand-link, .main-sidebar .user-panel { border-bottom: 1px solid #ccc; }

.main-sidebar .nav-treeview > .nav-item > .nav-link, .main-sidebar .sidebar a, .main-sidebar .brand-link { color: #fff!important; }
.sidebar-dark-primary .nav-sidebar > .nav-item > .nav-link.active, .sidebar-light-primary .nav-sidebar > .nav-item > .nav-link.active { background-color: #003f51; }
.main-sidebar .nav-treeview>.nav-item>.nav-link.active {background-color: #c6b836!important;}

.nav-sidebar > .nav-item > .nav-treeview { margin-left: 15px;}
/* sidebar end */



.navbar-white {background-color: #003f51;}
.navbar-light .navbar-nav .nav-link, .navbar-light .navbar-nav .nav-link:visited,
.navbar-light .navbar-nav .show>.nav-link { color: #fff!important; }

.navbar-light .navbar-nav .nav-link:hover { opacity: 0.7; color: #fff; }

.main-footer {color: #fff; background-image: linear-gradient(140deg, #c1b33b 0%, #c1b33b 5%, #4ca8a1 75%); }
.main-footer a {color: #fff; }


.card-primary:not(.card-outline)>.card-header { background-color: #003f51;}
.thead-default { background-color: #003f51!important;}
